<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/holo_green_light"
    tools:context=".reglog.ResetPasswordActivity">

    <!-- Title for Forgot Password -->
    <TextView
        android:id="@+id/forgot_password_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="48dp"
        android:text="Forgot Password"
        android:textColor="@android:color/white"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Email EditText -->
    <EditText
        android:id="@+id/email_edittext_forgot_password"
        android:layout_width="0dp"
        android:layout_height="50dp"
        android:layout_marginHorizontal="32dp"
        android:layout_marginTop="32dp"
        android:background="@drawable/rounded_edittext_register_login"
        android:hint="Enter your email"
        android:inputType="textEmailAddress"
        android:paddingStart="16dp"
        app:layout_constraintTop_toBottomOf="@+id/forgot_password_title"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Send Request Button -->
    <Button
        android:id="@+id/send_reset_button"
        android:layout_width="0dp"
        android:layout_height="50dp"
        android:layout_marginTop="24dp"
        android:text="Send Reset Link"
        android:background="@drawable/rounded_button"
        android:textColor="@android:color/white"
        android:textStyle="bold"
        app:layout_constraintTop_toBottomOf="@+id/email_edittext_forgot_password"
        app:layout_constraintStart_toStartOf="@+id/email_edittext_forgot_password"
        app:layout_constraintEnd_toEndOf="@+id/email_edittext_forgot_password" />

    <!-- Back to Login TextView -->
    <TextView
        android:id="@+id/back_to_login_textview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="Back to Login"
        android:textColor="@android:color/white"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintTop_toBottomOf="@+id/send_reset_button"
        app:layout_constraintStart_toStartOf="@+id/send_reset_button"
        app:layout_constraintEnd_toEndOf="@+id/send_reset_button" />

</androidx.constraintlayout.widget.ConstraintLayout>
